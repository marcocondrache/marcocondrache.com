{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",

  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },

  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },

  "files.associations": {
    "*.css": "tailwindcss"
  }
}
